//https://www.codechef.com/problems/EVENDIFF
#include <bits/stdc++.h>
using namespace std;

int main() {
long long int t;
cin>>t;
while(t--)
{
   long long int even=0;
   long long int odd=0;
  long long int n;
   cin>>n;
  
   for(long long int i=0;i<n;i++)
   {
     long long int ele;
      cin>>ele;
      if(ele%2==1)
      odd++;
      if(ele%2==0)
      even++;
      
      
   }
   int ans=min(even,odd);
   if(even==n || odd==n)
   cout<<0<<endl;
   else
   {
      cout<<ans<<endl;
   }
   
   
}
	return 0;
}
