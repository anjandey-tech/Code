//even sum
//https://www.codechef.com/problems/EVENGAME
#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	   int n;
	   cin>>n;
	   int even=0,odd=0;
	   while(n--)
	   {
	      int ele;
	      cin>>ele;
	      if(ele%2==0)
	      even++;
	      if(ele%2==1)
	      odd+=ele;
	      
	   }
	   if(odd%2==0)
	   cout<<"1"<<endl;
	   else
	   cout<<"2"<<endl;
	}
	return 0;
}
